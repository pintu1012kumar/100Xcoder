{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // ⚠️ Yeh hatao warna error aayega
    // "allowImportingTsExtensions": true,

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true
  }
}
